	<div><span class='inputtag'>Email</span><input id="emailfield" type="text"></input></div>
	<div><span class='inputtag'>Password</span><input id="passwordfield" type="text"></input></div>
	<div><input class="signupsubmit" type="button" value="Sign up" onclick="postSignup()" /><input type="button" value="Back" onclick="closeSignup()"></div>
